// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022", // 或更高，根据你的 Node.js 版本
    "module": "NodeNext", // 或 "CommonJS"，取决于你的偏好
    "moduleResolution": "NodeNext", // 或 "Node"
    "lib": [
      "ES2022"
    ], // 或更高
    "outDir": "./dist", // 编译输出目录
    "rootDir": "./src", // 源文件根目录
    "strict": true, // 启用严格类型检查
    "esModuleInterop": true, // 允许 import CommonJS 模块
    "skipLibCheck": true, // 跳过库文件检查
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "resolveJsonModule": true, // 允许导入 JSON 模块
    "sourceMap": true // 生成 source maps (用于调试)
  },
  "include": [
    "src/**/*"
  ], // 包含 src 目录下的所有文件
  "exclude": [
    "node_modules"
  ] // 排除 node_modules
}